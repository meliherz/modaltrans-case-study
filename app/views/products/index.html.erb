<h1 style="font-size: 1.5rem; margin-bottom: 16px; color: #770606ff;">Products</h1>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
  <div>
    <%= button_to "Sync Products from Google Sheet",
                  sync_products_path,
                  method: :post,
                  form: { data: { turbo_confirm: "Are you sure you want to sync products from Google Sheets?" } },
                  style: "padding: 8px 12px; margin-right: 8px;" %>

    <span style="font-size: 0.9rem; color: #555;">
      Sync will import or update products based on the Google Sheet configuration.
    </span>
  </div>

  <div>
    <%= link_to "New product",
                new_product_path,
                style: "padding: 8px 12px; text-decoration: none; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>
</div>

<table style="width: 100%; border-collapse: collapse;">
  <thead>
    <tr>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">Name</th>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">Price</th>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">Stock</th>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">Category</th>
      <th style="border-bottom: 1px solid #ddd; padding: 8px;"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td style="border-bottom: 1px solid #f0f0f0; padding: 8px;"><%= product.name %></td>
        <td style="border-bottom: 1px solid #f0f0f0; padding: 8px;"><%= product.price %></td>
        <td style="border-bottom: 1px solid #f0f0f0; padding: 8px;"><%= product.stock %></td>
        <td style="border-bottom: 1px solid #f0f0f0; padding: 8px;"><%= product.category %></td>
        <td style="border-bottom: 1px solid #f0f0f0; padding: 8px; text-align: right;">
          <%= link_to "Show", product, style: "margin-right: 8px;" %>
          <%= link_to "Edit", edit_product_path(product), style: "margin-right: 8px;" %>
          <%= link_to "Destroy",
                      product,
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
